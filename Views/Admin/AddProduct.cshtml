@{
}
@model Product

<h4>@ViewBag.Heading</h4>
<form asp-controller="Admin" asp-action="AddProduct"  method="post">
   <label asp-for="Name"></label><br></br>
   <input asp-for="Name" type="Text"></input><br></br>
   
      <label asp-for="Description"></label><br></br>
   <textarea asp-for="Description" type="Text"></textarea><br></br>
      <label asp-for="Highlights"></label><br></br>
   <textarea asp-for="Highlights" type="Text"></textarea><br></br>
      <label asp-for="Details"></label><br></br>
   <textarea asp-for="Details" type="Text"></textarea><br></br>
     <label asp-for="BrandId"></label><br></br>
   <select asp-for="BrandId" type="Text">
        @foreach(var brand in @ViewBag.brands)
        {
            <option value=@brand.BrandId>@brand.Name</option>
        }




   </select><br></br>
   <button type="submit">Add</button>
</form>

@foreach(var product in @ViewBag.Products){

    
        <li>
             <a href="/Admin/AddProductVariant/@product.ProductId">@product.Name</a>
            
        </li>

}